
    <div id="adminconsole" class="block2col">
        <div id="adminmenu" class="blockmenu">
            <h2><span>{{ transd(['pms', 'Folders']) }}</span></h2>
            <div class="box">
                <div class="inbox">
                    <ul>
        {% if inboxes is not empty %}
            {% for iid, inbox in inboxes %}
                        {% set totalMsg = totalMsg + inbox.nb_msg %}
                        <li{{ page == inbox.name ? ' class="isactive"' : '' }}>
                        <a href="{{ pathFor('Conversations.home', {'inbox_id': iid}) }}">
                            {{ inbox.name }} {{ inbox.nb_msg > 0 ? ' (' ~inbox.nb_msg ~')' : '' }}</a>
                        </li>
            {% endfor %}
        {% endif %}
                    </ul>
                </div>
            </div>
            <h2><span>{{ transd(['pms', 'Storage']) }}</span></h2>
            <div class="box">
                <div class="inbox">
                    <ul>
                        <li class="big">Inbox: 0% full</li>
                        <li><div id="pm_bar_style" style="width:0;"></div></li>
                        <li class="big">Quota: {{ totalMsg }} / &infin;</li>
                    </ul>
                </div>
            </div>
            <br />
            <h2><span>{{ transd(['pms', 'Options']) }}</span></h2>
            <div class="box">
                <div class="inbox">
                    <ul>
                        <li{{ page == 'blocked' ? ' class="isactive"' : '' }}><a href="{{ pathFor('Conversations.blocked') }}">{{ transd(['pms', 'Blocked Users']) }}</a></li>
                        <li{{ page == 'folders' ? ' class="isactive"' : '' }}><a href="{{ pathFor('Conversations.folders') }}">{{ transd(['pms', 'My Folders']) }}</a></li>
                    </ul>
                </div>
            </div>
        </div>
